<sml xmlns="http://www.opengis.net/sensorML/1.0.1"
          xmlns:gml="http://www.opengis.net/gml"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.opengis.net/sensorML/1.0.1
                              http://schemas.opengis.net/sensorML/1.0.1/sensorML.xsd">

  <Connection id="sensor_connection">
    <identification>
      <IdentifierList>
        <identifier>
          <Term definition="urn:ogc:def:identifier:OGC:uniqueID">sensor_connection_1</Term>
        </identifier>
      </IdentifierList>
    </identification>
    <connects>
      <ConnectList>
        <connect>
          <from>
            <Link title="Temperature Sensor Output" href="sensor_descriptions/temperature_sensor.xml#temperature_sensor/output"/>
          </from>
          <to>
            <Link title="Humidity Sensor Input" href="sensor_descriptions/humidity_sensor.xml#humidity_sensor/input"/>
          </to>
        </connect>
        <connect>
          <from>
            <Link title="Humidity Sensor Output" href="sensor_descriptions/humidity_sensor.xml#humidity_sensor/output"/>
          </from>
          <to>
            <Link title="Temperature Sensor Input" href="sensor_descriptions/temperature_sensor.xml#temperature_sensor/input"/>
          </to>
        </connect>
      </ConnectList>
    </connects>
    <metadata>
    </metadata>
  </Connection>
</sml>
